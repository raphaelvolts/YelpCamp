<% layout('layouts/boilerplate') %>
    <div class="container d-flex justify-content-center align-content-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://res.cloudinary.com/dei8hlvch/image/upload/v1709305979/YelpCamp/scott-goodwill-y8Ngwq34_Ak-unsplash_zjtekb.jpg" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validate-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="email">email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required>
                                <div class="invalid-feedback">
                                    Please enter a Username!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="invalid-feedback">
                                    Please enter a Password!
                                </div>
                            </div>
                            <div class="mb-3 d-grid">
                                <button class="btn btn-success">Register!</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    