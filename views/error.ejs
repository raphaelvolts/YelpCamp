<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3 text-wrap">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <% if (process.env.NODE_ENV !== "production") { %>
                <p>
                    <small class="text-break">
                        <%= err.stack %>
                    </small>
                </p>
                <% } %>
            </div>
        </div>
    </div>